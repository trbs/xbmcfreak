<!--Alaska-->

<includes>

	<include name="Viewtype_Fanart">

		<!-- Browser -->

		<control type="wraplist" id="56">
			<posx>-66</posx>
			<posy>50</posy>
			<height>500</height>
			<width>1400</width>
			<onleft>300</onleft>
			<onright>300</onright>
			<onup>7000</onup>
			<ondown>7000</ondown>
			<viewtype label="Fanart">list</viewtype>
			<orientation>horizontal</orientation>
			<focusposition>2</focusposition>
			<scrolltime>200</scrolltime>
			<preloaditems>2</preloaditems>
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_ZoomedByMenu</include>
			<visible>Container.Content(movies) | Container.Content(albums) | Container.Content(artists)</visible>
			<itemlayout width="278" height="194">
				<control type="image">
					<posx>1</posx>
					<posy>131</posy>
					<width>270</width>
					<height>152</height>
					<texture>episodematteNF.png</texture>
					<colordiffuse>BackgroundColor</colordiffuse>
					<include>Animation_HiddenByInfo</include>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>131</posy>
					<width>270</width>
					<height>152</height>
					<texture background="true" fallback="special://skin/media/backdrops/movies.jpg" diffuse="episodematteNF.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
					<fadetime>200</fadetime>
					<colordiffuse>IconDiffuse</colordiffuse>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_HiddenByInfo</include>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>130</posy>
					<width>272</width>
					<height>154</height>
					<texture>episodeframeNF.png</texture>
					<include>Animation_HiddenByInfo</include>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>284</posy>
					<width>270</width>
					<height>152</height>
					<texture background="true" flipy="true" fallback="special://skin/media/backdrops/movies.jpg" diffuse="episodematteNF_reflect.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
					<fadetime>200</fadetime>
					<colordiffuse>IconDiffuse</colordiffuse>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_HiddenByInfo</include>
				</control>
				<control type="image">
					<posx>4</posx>
					<posy>134</posy>
					<width>20</width>
					<height>20</height>
					<visible>Skin.HasSetting(movieoverlays) + !IsEmpty(ListItem.Overlay) + Container.Content(movies) + stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
					<texture>OverlayWatchedBackground.png</texture>
					<colordiffuse>WatchedIconBackNF</colordiffuse>
					<include>Animation_HiddenByInfo</include>
				</control>
				<control type="image">
					<posx>4</posx>
					<posy>134</posy>
					<width>20</width>
					<height>20</height>
					<visible>Skin.HasSetting(movieoverlays) + !IsEmpty(ListItem.Overlay) + Container.Content(movies) + stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
					<info>ListItem.Overlay</info>
					<colordiffuse>WatchedIconDiffuseNF</colordiffuse>
					<include>Animation_HiddenByInfo</include>
				</control>
			</itemlayout>
			<focusedlayout width="300" height="184">
				<control type="image">
					<posx>2</posx>
					<posy>124</posy>
					<width>290</width>
					<height>164</height>
					<texture background="true" fallback="special://skin/media/backdrops/movies.jpg" diffuse="episodematte.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
					<fadetime>200</fadetime>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_LandscapeInfoSlide</include>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="145,202" start="51" end="100" time="600" tween="back" easing="out" />
					</animation>
				</control>
				<control type="image">
					<posx>-10</posx>
					<posy>114</posy>
					<width>314</width>
					<height>184</height>
					<texture>episodeframeF.png</texture>
					<include>Animation_LandscapeInfoSlide</include>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="157,192" start="51" end="100" time="600" tween="back" easing="out" />
						<effect type="fade" start="0" end="100" time="600" />
					</animation>
				</control>
				<control type="image">
					<posx>8</posx>
					<posy>131</posy>
					<width>26</width>
					<height>26</height>
					<visible>Skin.HasSetting(movieoverlays) + !IsEmpty(ListItem.Overlay) + Container.Content(movies) + stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
					<texture>OverlayWatchedBackground.png</texture>
					<colordiffuse>WatchedIconBackFO</colordiffuse>
					<include>Animation_HiddenByInfo</include>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="157,192" start="51" end="100" time="600" tween="back" easing="out" />
						<effect type="fade" start="0" end="100" time="600" />
					</animation>
				</control>
				<control type="image">
					<posx>8</posx>
					<posy>131</posy>
					<width>26</width>
					<height>26</height>
					<visible>Skin.HasSetting(movieoverlays) + !IsEmpty(ListItem.Overlay) + Container.Content(movies) + stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
					<info>ListItem.Overlay</info>
					<colordiffuse>WatchedIconDiffuseFO</colordiffuse>
					<include>Animation_HiddenByInfo</include>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="157,192" start="51" end="100" time="600" tween="back" easing="out" />
						<effect type="fade" start="0" end="100" time="600" />
					</animation>
				</control>
			</focusedlayout>
		</control>

		<!-- Browser label and flags -->

		<control type="group">
			<posx>505</posx>
			<posy>344</posy>
			<visible>Control.IsVisible(56)</visible>
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_ZoomedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<control type="fadelabel">
				<posx>0</posx>
				<posy>0</posy>
				<width>640</width>
				<height>50</height>
				<aligny>center</aligny>
				<scrollout>false</scrollout>
				<pauseatend>600</pauseatend>
				<scrollspeed>20</scrollspeed>
				<font>Font_MainMenuLabel</font>
				<textcolor>FanartTitle</textcolor>
				<label>[B]$INFO[ListItem.Label][/B]</label>
				<visible>Container.Content(movies) | Container.Content(albums) | Container.Content(artists)</visible>
			</control>
			<control type="label">
				<posx>0</posx>
				<posy>32</posy>
				<width>640</width>
				<height>50</height>
				<aligny>center</aligny>
				<font>Font_ListDetail</font>
				<textcolor>FanartTitle</textcolor>
				<label>[B]$LOCALIZE[515]:[/B] $INFO[ListItem.Genre]</label>
				<visible>Container.Content(movies) | Container.Content(albums)</visible>
			</control>
			<control type="textbox">
				<posx>0</posx>
				<posy>74</posy>
				<width>640</width>
				<height>196</height>
				<align>left</align>
				<info>ListItem.Plot</info>
				<autoscroll time="3200" delay="6000" repeat="6000">Skin.HasSetting(autoscroll)</autoscroll>
				<font>Font_InfoPlot</font>
				<textcolor>FanartText</textcolor>
				<visible>Container.Content(movies)</visible>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>78</posy>
				<width>121</width>
				<height>22</height>
				<texture>$INFO[ListItem.StarRating]</texture>
				<colordiffuse>StarDiffuse</colordiffuse>
				<visible>!IsEmpty(ListItem.Album) + Container.Content(albums)</visible>
			</control>
		</control>
	</include>
</includes>
