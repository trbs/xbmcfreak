	<include name="Global_Time">
		<control type="group">
			<posx>1250</posx>
			<posy>30</posy>
			<control type="label">
				<width>300</width>
				<font>Font_Time</font>
				<textcolor>TimeAMPM</textcolor>
				<label>$INFO[System.Time(hh:mm)] AM</label>
				<align>right</align>
				<animation effect="slide" start="0,0" end="-100,0" time="0" condition="Skin.HasSetting(ShowGlobalTemp)">Conditional</animation>
				<animation effect="slide" end="400,0" time="400" easing="inout" tween="cubic" condition="[Window.IsVisible(104) + [Window.IsVisible(101) | Window.IsVisible(112) | Window.IsVisible(133)]] | [Window.IsVisible(113) + [Window.IsVisible(101) | Window.IsVisible(112) | Window.IsVisible(133)]] | [Window.IsVisible(112) + [Window.IsVisible(101) | Window.IsVisible(133)]] | [[Window.IsVisible(101) + Window.IsVisible(133)]]">Conditional</animation>
				<visible>substring(system.time,AM,right)</visible>
			</control>
			<control type="label">
				<width>300</width>
				<font>Font_Time</font>
				<textcolor>TimeAMPM</textcolor>
				<label>$INFO[System.Time(hh:mm)] PM</label>
				<align>right</align>
				<animation effect="slide" start="0,0" end="-100,0" time="0" condition="Skin.HasSetting(ShowGlobalTemp)">Conditional</animation>
				<animation effect="slide" end="400,0" time="400" easing="inout" tween="cubic" condition="[Window.IsVisible(104) + [Window.IsVisible(101) | Window.IsVisible(112) | Window.IsVisible(133)]] | [Window.IsVisible(113) + [Window.IsVisible(101) | Window.IsVisible(112) | Window.IsVisible(133)]] | [Window.IsVisible(112) + [Window.IsVisible(101) | Window.IsVisible(133)]] | [[Window.IsVisible(101) + Window.IsVisible(133)]]">Conditional</animation>
				<visible>substring(system.time,PM,right)</visible>
			</control>
			<control type="label">
				<width>300</width>
				<font>Font_Time</font>
				<textcolor>Time</textcolor>
				<info>System.Time(hh:mm)</info>
				<align>right</align>
				<animation effect="slide" start="0,0" end="-67,0" time="0" condition="substring(system.time,AM,right)">Conditional</animation>
				<animation effect="slide" start="0,0" end="-63,0" time="0" condition="substring(system.time,PM,right)">Conditional</animation>
				<animation effect="slide" start="0,0" end="-100,0" time="0" condition="Skin.HasSetting(ShowGlobalTemp)">Conditional</animation>
				<animation effect="slide" end="400,0" time="400" easing="inout" tween="cubic" condition="[Window.IsVisible(104) + [Window.IsVisible(101) | Window.IsVisible(112) | Window.IsVisible(133)]] | [Window.IsVisible(113) + [Window.IsVisible(101) | Window.IsVisible(112) | Window.IsVisible(133)]] | [Window.IsVisible(112) + [Window.IsVisible(101) | Window.IsVisible(133)]] | [[Window.IsVisible(101) + Window.IsVisible(133)]]">Conditional</animation>
			</control>
			<control type="label">
				<posy>40</posy>
				<width>300</width>
				<font>Font_Date</font>
				<textcolor>Date</textcolor>
				<info>System.Date</info>
				<align>right</align>
				<animation effect="slide" end="400,0" time="400" easing="inout" tween="cubic" condition="[Window.IsVisible(104) + [Window.IsVisible(101) | Window.IsVisible(112) | Window.IsVisible(133)]] | [Window.IsVisible(113) + [Window.IsVisible(101) | Window.IsVisible(112) | Window.IsVisible(133)]] | [Window.IsVisible(112) + [Window.IsVisible(101) | Window.IsVisible(133)]] | [[Window.IsVisible(101) + Window.IsVisible(133)]]">Conditional</animation>
			</control>
		</control>
		<control type="group">
			<posx>1250</posx>
			<posy>30</posy>
			<control type="label">
				<width>128</width>
